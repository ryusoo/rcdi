<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<!-- DB접속정보 값을 가지고 있는 파일 설정 경로의 패키지명까지 풀네임으로 적을 것 -->
	<properties resource="com/rcdi/mybatis/db.properties"/>
	<!-- 별명 부여 -->
	<typeAliases>
		<typeAlias type="com.rcdi.dto.ProductDTO" alias="ProductDTO"></typeAlias>
	</typeAliases>
	<!-- DB 접속정보 세팅 -->
	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC" />
			<dataSource type="POOLED">
				<property name="driver" value="${driver}" />
				<property name="url" value="${url}" />
				<property name="username" value="${username}" />
				<property name="password" value="${password}" />
			</dataSource>
		</environment>
	</environments>
	<!-- Mapper.xml설정 -->
	<mappers>
		<mapper resource="com/rcdi/mybatis/RcdiMapper.xml" />
	</mappers>
</configuration>